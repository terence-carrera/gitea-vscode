{
    "name": "gitea",
    "displayName": "Gitea",
    "description": "Unofficial Gitea Extension for VS Code",
    "version": "0.1.5",
    "publisher": "TerenceCarrera",
    "license": "GPL-3.0-only",
    "repository": {
        "url": "https://github.com/terence-carrera/gitea-vscode"
    },
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "SCM Providers"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./extension.js",
    "icon": "media/gitea-logo-marketplace.png",
    "contributes": {
        "commands": [
            {
                "command": "gitea.configure",
                "title": "Gitea: Configure Instance",
                "icon": "$(gear)"
            },
            {
                "command": "gitea.searchRepositories",
                "title": "Gitea: Search Repositories",
                "icon": "$(search)"
            },
            {
                "command": "gitea.searchIssues",
                "title": "Gitea: Search Issues",
                "icon": "$(search)"
            },
            {
                "command": "gitea.searchPullRequests",
                "title": "Gitea: Search Pull Requests",
                "icon": "$(search)"
            },
            {
                "command": "gitea.refreshRepositories",
                "title": "Refresh Repositories",
                "icon": "$(refresh)"
            },
            {
                "command": "gitea.toggleNotifications",
                "title": "Gitea: Toggle Notifications",
                "icon": "$(bell)"
            },
            {
                "command": "gitea.notificationStatus",
                "title": "Gitea: Check Notification Status",
                "icon": "$(info)"
            },
            {
                "command": "gitea.createRepository",
                "title": "Gitea: Create Repository",
                "icon": "$(new-folder)"
            },
            {
                "command": "gitea.createIssue",
                "title": "Gitea: Create Issue",
                "icon": "$(new-file)"
            },
            {
                "command": "gitea.importIssues",
                "title": "Gitea: Import Issues from XLSX",
                "icon": "$(archive)"
            },
            {
                "command": "gitea.createPullRequest",
                "title": "Gitea: Create Pull Request",
                "icon": "$(git-pull-request-create)"
            },
            {
                "command": "gitea.openRepository",
                "title": "Open Repository in VS Code",
                "icon": "$(folder-opened)"
            },
            {
                "command": "gitea.openInBrowser",
                "title": "Open in Browser",
                "icon": "$(globe)"
            },
            {
                "command": "gitea.openIssueInBrowser",
                "title": "Open Issue in Browser",
                "icon": "$(globe)"
            },
            {
                "command": "gitea.openPullRequestInBrowser",
                "title": "Open Pull Request in Browser",
                "icon": "$(globe)"
            },
            {
                "command": "gitea.viewIssueDetails",
                "title": "View Issue Details",
                "icon": "$(eye)"
            },
            {
                "command": "gitea.viewPullRequestDetails",
                "title": "View Pull Request Details",
                "icon": "$(eye)"
            },
            {
                "command": "gitea.switchBranch",
                "title": "Gitea: Switch Branch",
                "icon": "$(git-branch)"
            },
            {
                "command": "gitea.createBranchFromIssue",
                "title": "Gitea: Create Branch from Issue",
                "icon": "$(git-branch)"
            },
            {
                "command": "gitea.createBranchFromPR",
                "title": "Gitea: Create Branch from Pull Request",
                "icon": "$(git-branch)"
            },
            {
                "command": "gitea.deleteBranch",
                "title": "Gitea: Delete Branch",
                "icon": "$(trash)"
            },
            {
                "command": "gitea.restoreDeletedBranch",
                "title": "Gitea: Restore Deleted Branch",
                "icon": "$(discard)"
            },
            {
                "command": "gitea.restoreBranchFromReflog",
                "title": "Gitea: Restore Branch from Reflog",
                "icon": "$(history)"
            },
            {
                "command": "gitea.showDeletedBranchDetails",
                "title": "Show Deleted Branch Details",
                "icon": "$(info)"
            },
            {
                "command": "gitea.restoreBranchFromTree",
                "title": "Restore Branch",
                "icon": "$(discard)"
            },
            {
                "command": "gitea.removeFromHistory",
                "title": "Remove from History",
                "icon": "$(trash)"
            },
            {
                "command": "gitea.clearDeletionHistory",
                "title": "Clear All Deletion History",
                "icon": "$(clear-all)"
            },
            {
                "command": "gitea.exportDeletionHistory",
                "title": "Gitea: Export Deletion History",
                "icon": "$(export)"
            },
            {
                "command": "gitea.importDeletionHistory",
                "title": "Gitea: Import Deletion History",
                "icon": "$(import)"
            },
            {
                "command": "gitea.refreshDeletedBranches",
                "title": "Refresh Deleted Branches",
                "icon": "$(refresh)"
            },
            {
                "command": "gitea.addProfile",
                "title": "Gitea: Add Profile",
                "icon": "$(add)"
            },
            {
                "command": "gitea.manageStash",
                "title": "Gitea: Manage Stashes",
                "icon": "$(archive)"
            },
            {
                "command": "gitea.switchProfile",
                "title": "Gitea: Switch Profile",
                "icon": "$(account)"
            },
            {
                "command": "gitea.removeProfile",
                "title": "Gitea: Remove Profile",
                "icon": "$(trash)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "gitea-explorer",
                    "title": "Gitea",
                    "icon": "media/gitea-logo.svg"
                }
            ]
        },
        "views": {
            "gitea-explorer": [
                {
                    "id": "gitea.repositories",
                    "name": "Repositories",
                    "icon": "$(git-branch)"
                },
                {
                    "id": "gitea.issues",
                    "name": "Issues",
                    "icon": "$(issue-opened)"
                },
                {
                    "id": "gitea.pullRequests",
                    "name": "Pull Requests",
                    "icon": "$(git-pull-request)"
                },
                {
                    "id": "gitea.deletedBranches",
                    "name": "Deleted Branches",
                    "icon": "$(trash)"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "gitea.refreshRepositories",
                    "when": "view == gitea.repositories || view == gitea.issues || view == gitea.pullRequests",
                    "group": "navigation"
                },
                {
                    "command": "gitea.searchRepositories",
                    "when": "view == gitea.repositories",
                    "group": "navigation"
                },
                {
                    "command": "gitea.searchIssues",
                    "when": "view == gitea.issues",
                    "group": "navigation"
                },
                {
                    "command": "gitea.searchPullRequests",
                    "when": "view == gitea.pullRequests",
                    "group": "navigation"
                },
                {
                    "command": "gitea.createRepository",
                    "when": "view == gitea.repositories",
                    "group": "navigation@2"
                },
                {
                    "command": "gitea.createIssue",
                    "when": "view == gitea.issues",
                    "group": "navigation@2"
                },
                {
                    "command": "gitea.importIssues",
                    "when": "view == gitea.issues",
                    "group": "navigation@3"
                },
                {
                    "command": "gitea.createPullRequest",
                    "when": "view == gitea.pullRequests",
                    "group": "navigation@2"
                },
                {
                    "command": "gitea.refreshDeletedBranches",
                    "when": "view == gitea.deletedBranches",
                    "group": "navigation"
                },
                {
                    "command": "gitea.restoreBranchFromReflog",
                    "when": "view == gitea.deletedBranches",
                    "group": "navigation@2"
                },
                {
                    "command": "gitea.clearDeletionHistory",
                    "when": "view == gitea.deletedBranches",
                    "group": "navigation@3"
                },
                {
                    "command": "gitea.exportDeletionHistory",
                    "when": "view == gitea.deletedBranches",
                    "group": "1_export"
                },
                {
                    "command": "gitea.importDeletionHistory",
                    "when": "view == gitea.deletedBranches",
                    "group": "1_export"
                }
            ],
            "view/item/context": [
                {
                    "command": "gitea.openRepository",
                    "when": "view == gitea.repositories && viewItem == repository",
                    "group": "inline"
                },
                {
                    "command": "gitea.openInBrowser",
                    "when": "view == gitea.repositories && viewItem == repository",
                    "group": "inline"
                },
                {
                    "command": "gitea.openIssueInBrowser",
                    "when": "view == gitea.issues && viewItem == issue",
                    "group": "inline"
                },
                {
                    "command": "gitea.viewIssueDetails",
                    "when": "view == gitea.issues && viewItem == issue",
                    "group": "inline"
                },
                {
                    "command": "gitea.openPullRequestInBrowser",
                    "when": "view == gitea.pullRequests && viewItem == pullRequest",
                    "group": "inline"
                },
                {
                    "command": "gitea.viewPullRequestDetails",
                    "when": "view == gitea.pullRequests && viewItem == pullRequest",
                    "group": "inline"
                },
                {
                    "command": "gitea.createBranchFromIssue",
                    "when": "view == gitea.issues && viewItem == issue",
                    "group": "1_branch"
                },
                {
                    "command": "gitea.createBranchFromPR",
                    "when": "view == gitea.pullRequests && viewItem == pullRequest",
                    "group": "1_branch"
                },
                {
                    "command": "gitea.restoreBranchFromTree",
                    "when": "view == gitea.deletedBranches && viewItem == deletedBranch",
                    "group": "inline"
                },
                {
                    "command": "gitea.removeFromHistory",
                    "when": "view == gitea.deletedBranches && viewItem == deletedBranch",
                    "group": "1_actions"
                }
            ]
        },
        "configuration": {
            "title": "Gitea",
            "properties": {
                "gitea.instanceUrl": {
                    "type": "string",
                    "default": "",
                    "description": "Your Gitea instance URL (e.g., https://gitea.example.com)"
                },
                "gitea.authToken": {
                    "type": "string",
                    "default": "",
                    "description": "Personal Access Token for Gitea API authentication"
                },
                "gitea.enableNotifications": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable notifications for repository activities"
                },
                "gitea.notificationPollInterval": {
                    "type": "number",
                    "default": 60000,
                    "description": "Poll interval for notifications in milliseconds (minimum 30000 - 30 seconds)",
                    "minimum": 30000
                },
                "gitea.defaultRepoStartingPath": {
                    "type": "string",
                    "default": "c:\\Users\\Terence\\source\\repos",
                    "description": "Default starting path for repository operations"
                },
                "gitea.profiles": {
                    "type": "object",
                    "default": {},
                    "description": "Configured Gitea profiles for multiple accounts",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "instanceUrl": {
                                "type": "string",
                                "description": "Gitea instance URL for this profile"
                            },
                            "authToken": {
                                "type": "string",
                                "description": "Personal Access Token for this profile"
                            }
                        },
                        "required": [
                            "instanceUrl",
                            "authToken"
                        ]
                    }
                },
                "gitea.activeProfile": {
                    "type": "string",
                    "default": "default",
                    "description": "Name of the currently active Gitea profile"
                },
                "gitea.branchDeletionRetentionDays": {
                    "type": "number",
                    "default": 90,
                    "description": "Number of days to retain deleted branch history (default: 90 days)",
                    "minimum": 1,
                    "maximum": 365
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.90.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "eslint": "^9.39.1",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2"
    },
    "dependencies": {
        "marked": "^12.0.0",
        "xlsx": "^0.18.5"
    }
}